	<munit:config name="unit-test-poller.xml" />
	
	<munit:test name="execute-poller-enabled-bad-login-test" doc:id="10bb476e-e48f-417d-8c95-d699fdf8bbc2" description="Test" expectedErrorType="MULE:COMPOSITE_ROUTING">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock when POST login request" doc:id="21b986cf-5d7e-41f3-93ce-b7dafe5ad172" processor="http:request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="Post Login Request" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value="#[null]" />
					<munit-tools:error typeId="HTTP:CONNECTIVITY" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="Flow-ref to poller-main-flow" doc:id="dcc7d79b-dba8-4939-b541-ded681f566e8" name="poller-main-flow"/>
		</munit:execution>
		<munit:validation>
			<munit-tools:assert-that doc:name="Assert that" doc:id="9c97efa5-3087-4689-bc6a-0b6493cd2f5f" expression="#[payload]" is="#[MunitTools::nullValue()]"/>
		</munit:validation>
	</munit:test>
	
	<munit:test name="execute-poller-disabled-test" doc:id="fafcd100-6633-485a-aa8c-72f2a94ecfe4" description="Test">
